<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classes List</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f5f9;
            margin: 0;
            padding: 30px;
            color: #333;
        }
        
        .container {
            max-width: 1000px;
            margin: auto;
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }
        
        h2 {
            color: #2c3e50;
            margin-bottom: 25px;
            text-align: center;
            font-size: 28px;
            font-weight: 600;
            border-bottom: 2px solid #eaeaea;
            padding-bottom: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 25px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 14px 18px;
            text-align: left;
        }

        th {
            background-color: #3498db;
            color: white;
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }
        
        tr:hover {
            background-color: #e3f2fd;
            transition: background-color 0.2s;
        }

        .no-data {
            color: #e74c3c;
            font-size: 18px;
            margin: 30px 0;
            text-align: center;
            padding: 20px;
            background: #fff8f8;
            border-radius: 8px;
            border-left: 4px solid #e74c3c;
        }

        .btn {
            display: inline-block;
            padding: 8px 16px;
            background: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
            font-size: 14px;
            text-align: center;
        }

        .btn:hover {
            background: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        }
        
        .btn-add {
            background-color: #2ecc71;
        }
        
        .btn-add:hover {
            background-color: #27ae60;
        }
        
        .btn-show {
            background-color: #3498db;
        }
        
        .btn-show:hover {
            background-color: #2980b9;
        }
        
        .action-btns {
            text-align: center;
        }
        
        .footer {
            margin-top: 30px;
            text-align: center;
        }
        
        .btn-back {
            padding: 10px 25px;
            font-size: 16px;
        }
        .btn-delete {
            background-color: #e74c3c;
        }
        
        .btn-delete:hover {
            background-color: #c0392b;
        }

        .class-card {
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            padding: 20px;
            margin-bottom: 20px;
        }

        .class-card h3 {
            margin: 0 0 15px;
            font-size: 20px;
            color: #2c3e50;
        }

        .teacher-info p {
            margin: 0 0 10px;
            font-size: 16px;
        }

        .class-actions a {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Registered Classes</h2>
        
        <% if (classes && classes.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Class</th>
                    <th>Section</th>
                    <th>Teacher</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% classes.forEach(classObj => { %>
                    <tr>
                        <td><%= classObj.name %></td>
                        <td><%= classObj.section %></td>
                        <td>
                            <% if (classObj.teacher) { %>
                                <%= classObj.teacher.fname %> <%= classObj.teacher.lname %>
                            <% } else { %>
                                <em>Not assigned</em>
                            <% } %>
                        </td>
                        <td >
                            <a href="/showClassStudents/<%= classObj._id %>" class="btn btn-show">Students</a>
                            <a href="/assignTeacher/<%= classObj._id %>" class="btn btn-show">Assign Teacher</a>
                            <a href="/classDel/<%= classObj._id %>" class="btn btn-delete" >Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <div class="no-data">
                <p>No classes registered yet.</p>
            </div>
        <% } %>

       
        <div class="footer">
            <a href="/class" class="btn btn-back">Go Back</a>
        </div>
    </div>

</body>
</html>